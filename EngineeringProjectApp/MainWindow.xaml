<Window x:Class="EngineeringProjectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:local="clr-namespace:EngineeringProjectApp" 
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">

    <!--Height="735" Width="770"-->
    <Grid>

        <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="kinectChooser" >

        </k:KinectSensorChooserUI>


        <Canvas Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top" Name="mainCanva" Width="960" Height="720">
            <Image Name="Image"  HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="0" Canvas.Top="0" Width="960" Height="720"  Source="/Resources/Background.png"/>
            <Ellipse Fill="OrangeRed"  Name="OrangeDot" Stretch="Uniform" Canvas.Left="0" Canvas.Top="0" Width="20" Height="20"/>
        </Canvas>
    </Grid>
</Window>
